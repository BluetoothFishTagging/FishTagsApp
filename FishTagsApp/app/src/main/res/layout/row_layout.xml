<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:paddingBottom="@dimen/row_vert_margin"
    android:paddingLeft="@dimen/row_horz_margin"
    android:paddingRight="@dimen/row_horz_margin"

    android:paddingTop="@dimen/row_vert_margin"

    tools:context="bft.fishtagsapp.editlinkage.MainActivity">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/placeholder"
        android:contentDescription="photo"/>
    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLength="32"
        />
    <EditText
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxLength="16"
        android:focusable="false"
        />
</LinearLayout>
