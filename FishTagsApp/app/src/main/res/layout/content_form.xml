<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bft.fishtagsapp.FormActivity"
    tools:showIn="@layout/activity_form">

    <!-- Position text areas -->
    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:text="Name"
        android:layout_gravity="left"/>

    <EditText
        android:layout_row="0"
        android:layout_column="2"
        android:text="Han Solo"
        android:background="@android:color/transparent"
        android:cursorVisible="true"/>

    <TextView
        android:layout_row="1"
        android:layout_column="0"
        android:text="CountryID"/>

    <TextView
        android:layout_row="1"
        android:layout_column="2"
        android:id="@+id/CountryID"
        android:text=""/>

    <TextView
        android:layout_row="2"
        android:layout_column="0"
        android:text="Tag ID"/>

    <TextView
        android:layout_row="2"
        android:layout_column="2"
        android:id="@+id/NationalID"
        android:text=""/>

    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:text="Time"
        />

    <TextView
        android:layout_row="3"
        android:layout_column="2"
        android:id="@+id/time"
        />

    <TextView
        android:layout_row="4"
        android:layout_column="0"
        android:text="Location"
        />

    <TextView
        android:layout_row="4"
        android:layout_column="2"
        android:id="@+id/location"
        />


    <TextView
        android:layout_row="5"
        android:layout_column="0"
        android:text="Notes"
        />

    <EditText
        android:layout_row="5"
        android:layout_column="2"
        android:text=""
        android:hint="gear used, fish hooked removed (y/n), comments"
        />

    <Button
        android:layout_row="6"
        android:layout_column="0"
        android:id="@+id/PhotoButton"
        android:text="Take photo of fish"
        />

    <ImageView
        android:layout_row="6"
        android:layout_column="2"
        android:id="@+id/FishPhoto"
        android:src="@drawable/fish"
        />

    <Button
        android:layout_row="7"
        android:layout_column="1"
        android:id="@+id/submitForm"
        android:text="Submit"
        />

</GridLayout>
