<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/seaColor</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="logo">@mipmap/ic_launcher</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="FormProgress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FormProgress.Highlighted" parent="FormProgress">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FormProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">1</item>
        <item name="android:progress">0</item>
    </style>

    <style name="FormProgressBar.Highlighted" parent="FormProgressBar">
        <item name="android:progress">1</item>
    </style>

    <style name="DropDownStyle" parent="Base.TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textSize">40dp</item>
    </style>

    <style name="CheckboxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
    </style>

    <style name="FormTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
